<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <properties>
        <property name="instance">log-viewer</property>
        <property name="log.dir">/home/dubbo/applogs/</property>
        <property name="pattern">%d{yyyy-MM-dd HH:mm:ss,SSS} [${instance}] [%p] [%C{1}.java :%L(%M)] [%traceId] %m%n</property>
    </properties>

    <appenders>

        <Console name="console" target="system_out">
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <RollingFile name="FileLog" fileName="${log.dir}/${instance}/${instance}.log"
                     filePattern="${log.dir}/${instance}/${instance}-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>


    </appenders>

    <loggers>
        <logger name="com.lsyf.pay" level="debug" additivity="true"/>
        <logger name="org.apache.commons" level="warn"/>
        <root level="info">
            <appender-ref ref="console"/>
            <appender-ref ref="FileLog"/>
        </root>

    </loggers>


</configuration>